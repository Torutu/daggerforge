{
	"name": "daggerforge",
	"version": "2.1.6",
	"description": "A DaggerHeart toolkit for Obsidian, providing easy access to DaggerHeart's Adversaries and the ability to create your own.",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"watch": "esbuild src/main.ts --bundle --outfile=main.js --external:obsidian --platform=node --format=cjs --minify-syntax --minify-whitespace --watch",
		"test": "jest"
	},
	"keywords": [
		"obsidian",
		"daggerheart",
		"ttrpg",
		"adversary-cards",
		"battle-tracker",
		"daggerforge"
	],
	"author": "Waleed Alnaimi",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/jest": "^29.5.12",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "^8.56.0",
		"@typescript-eslint/parser": "^8.56.0",
		"builtin-modules": "3.3.0",
		"esbuild": "^0.25.12",
		"eslint": "^8.57.1",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"globals": "^17.3.0",
		"jest": "^25.0.0",
		"jiti": "^2.6.1",
		"obsidian": "latest",
		"prettier": "^3.6.2",
		"ts-jest": "^29.1.2",
		"tslib": "2.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.36.0"
	},
	"dependencies": {
		"html2canvas": "^1.4.1"
	}
}